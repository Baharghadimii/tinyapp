<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if(username) { %>
    <form method="POST" action="/logout">
      <label for='username' style="font-size: 20px;padding: 10px">Logged in As: <%= username %></label>
      <input type="submit" name='login' value="logout" style='padding: 10px;background: transparent;border-radius: 5px;border-color:black;font-size: 20px'>
    </form>
    <% } else { %>
    <form method="POST" action="/login">
      <input type="text" name='username' placeholder="username" style="border-radius: 5px;border-color: white;padding: 10px;padding-left: 10px;box-shadow: 0px 0px 0px transparent">
      <input type="submit" name='logout' value="login" style='padding: 10px;background: transparent;border-radius: 5px;border-color:black;font-size: 20px'>
    </form>
    <% } %>

  </nav>
</header>